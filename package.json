{
	"name": "intmax2-contract",
	"version": "0.1.0",
	"description": "INTMAX2 Protocol Smart Contracts",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"contracts",
		"artifacts/contracts/**/*.json",
		"!artifacts/contracts/**/*.dbg.json"
	],
	"keywords": [
		"ethereum",
		"scroll",
		"smart-contracts",
		"solidity",
		"rollup"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-org/intmax2-contract.git"
	},
	"devDependencies": {
		"@nomicfoundation/hardhat-toolbox": "5.0.0",
		"@openzeppelin/contracts": "5.1.0",
		"@openzeppelin/contracts-upgradeable": "5.1.0",
		"@openzeppelin/hardhat-upgrades": "3.2.1",
		"@prb/math": "^4.1.0",
		"@predicate/contracts": "^1.0.10",
		"@scroll-tech/contracts": "0.1.1",
		"@types/fs-extra": "11.0.4",
		"axios": "1.7.7",
		"dotenv": "16.4.5",
		"envalid": "8.0.0",
		"fs-extra": "11.2.0",
		"hardhat": "2.22.13",
		"hardhat-gas-reporter": "1.0.10",
		"poseidon-goldilocks": "0.2.3",
		"predicate-sdk": "^0.1.3",
		"prettier": "3.3.3",
		"prettier-plugin-solidity": "1.4.1",
		"solhint": "5.0.3",
		"solidity-coverage": "^0.8.14",
		"solidity-docgen": "0.6.0-beta.36",
		"zod": "3.23.8"
	},
	"scripts": {
		"compile": "hardhat compile",
		"test": "hardhat test",
		"lint": "npm run format && npm run solhint",
		"solhint": "solhint --fix --noPrompt --max-warnings 0 \"contracts/**/*.sol\"",
		"format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"docgen": "hardhat docgen",
		"build": "tsc",
		"prepare-publish": "node scripts/prepare-publish.js",
		"prepublishOnly": "npm run prepare-publish"
	},
	"engines": {
		"node": "20"
	}
}
